---
// File: src/layouts/SiteLayout.astro
// Main site layout for Marmoler√≠a La Victoria with SiteMeta, Header, and Footer

import SiteMeta from '../components/SiteMeta.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="es" class="scroll-smooth">
	<SiteMeta
		title={Astro.props.title}
		description={Astro.props.description}
		url="https://marmolerialavictoria.com"
		image="/img/og-image.jpg"
	/>

	<body
		class="min-h-dvh bg-white text-neutral-800 antialiased [font-:Inter,system-ui,Arial,sans-serif]">
		<Header />

		<main class="relative">
			<slot />
		</main>

		<Footer />
	</body>
</html>
