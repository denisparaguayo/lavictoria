---
const {
	title = 'Nuestro Proceso',
	subtitle = 'Acompañamos tu proyecto de principio a fin.',
	steps = [
		{
			icon: 'measure',
			heading: '1. Asesoría & Medición',
			text: 'Conversamos sobre tu idea, visitamos el espacio y tomamos medidas exactas.',
		},
		{
			icon: 'layers',
			heading: '2. Diseño & Materiales',
			text: 'Elegimos mármol, granito, cuarzo o melamina; definimos bordes y terminaciones.',
		},
		{
			icon: 'craft',
			heading: '3. Fabricación a Medida',
			text: 'Corte, pulido y zócalos con precisión; pruebas de encastre y calidad.',
		},
		{
			icon: 'install',
			heading: '4. Instalación & Control Final',
			text: 'Montaje profesional, sellado y limpieza; entregamos listo para usar.',
		},
	],
	id = 'proceso',
} = Astro.props;
---

<section id={id} class="mx-auto max-w-7xl px-4 py-16">
	<div class="text-center mb-10">
		<h2 class="text-3xl font-semibold font-display">{title}</h2>
		<p class="mt-2 text-neutral-600">{subtitle}</p>
	</div>

	<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
		{
			steps.map((step) => (
				<div class="rounded-2xl border border-neutral-200 p-6 bg-white shadow-sm hover:shadow-md transition-shadow">
					<div class="flex items-center gap-3">
						<div class="grid h-10 w-10 place-items-center rounded-xl border border-yellow-700/30 bg-yellow-100 text-yellow-700">
							{step.icon === 'measure' && (
								<svg
									class="h-6 w-6"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round">
									<path d="M21 3H3v18h18V3Z" class="opacity-0" />
									<path d="M4 8h16M4 12h10M4 16h6" />
								</svg>
							)}
							{step.icon === 'layers' && (
								<svg
									class="h-6 w-6"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round">
									<path d="M12 2 2 7l10 5 10-5-10-5Z" />
									<path d="m2 12 10 5 10-5" />
									<path d="m2 17 10 5 10-5" />
								</svg>
							)}
							{step.icon === 'craft' && (
								<svg
									class="h-6 w-6"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round">
									<path d="M14.7 6.3 3 18v3h3L17.7 9.3a3 3 0 1 0-3-3Z" />
								</svg>
							)}
							{step.icon === 'install' && (
								<svg
									class="h-6 w-6"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round">
									<path d="m20 6-11 11-5-5" />
									<path d="M4 20h16" />
								</svg>
							)}
						</div>
						<h3 class="text-lg font-semibold font-display">{step.heading}</h3>
					</div>
					<p class="mt-3 text-sm text-neutral-700">{step.text}</p>
				</div>
			))
		}
	</div>

	<div class="mt-10 text-center">
		<a
			href="#contacto"
			class="inline-flex items-center rounded-xl border border-yellow-700/30 bg-yellow-600 px-6 py-3 text-sm font-semibold text-white shadow hover:bg-yellow-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-700"
			>Solicitar presupuesto</a
		>
	</div>
</section>
