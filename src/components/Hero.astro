---
const {
	title = 'Marmolería La Victoria',
	subtitle = 'Elegancia que perdura en cada detalle',
	bgImage = '/img/hero-marble.webp', // reemplazá por tu imagen
	primary = { label: 'Pedir presupuesto', href: 'https://wa.me/' },
	secondary = { label: 'Ver trabajos', href: '#galeria' },
} = Astro.props;
---

<section
	class="relative isolate min-h-[70vh] md:min-h-[78vh] grid place-items-center overflow-hidden">
	<!-- Background image -->
	<div class="absolute inset-0 -z-10">
		<img
			src={bgImage}
			alt="Mármol elegante de fondo"
			class="h-full w-full object-cover"
			loading="eager"
		/>
		<div class="absolute inset-0 bg-neutral-900/45 mix-blend-multiply"></div>
		<!-- subtle vignette -->
		<div
			class="absolute inset-0 bg-gradient-to-t from-neutral-900/50 via-transparent to-neutral-900/20">
		</div>
	</div>

	<!-- Content -->
	<div class="mx-auto w-full max-w-3xl px-4 text-center text-neutral-100">
		<h1
			class="text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight [font-family:Cinzel,serif]">
			{title}
		</h1>
		<p class="mt-3 text-base sm:text-lg md:text-xl text-neutral-200">
			{subtitle}
		</p>

		<div
			class="mt-6 flex flex-col sm:flex-row items-center justify-center gap-3">
			<a
				href={primary.href}
				class="inline-flex w-full sm:w-auto items-center justify-center rounded-xl border border-yellow-700/30 bg-yellow-600 px-5 py-3 text-sm font-semibold text-white shadow hover:bg-yellow-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-700">
				{primary.label}
			</a>
			<a
				href={secondary.href}
				class="inline-flex w-full sm:w-auto items-center justify-center rounded-xl border border-white/20 bg-white/10 px-5 py-3 text-sm font-semibold text-white backdrop-blur hover:bg-white/20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white/60">
				{secondary.label}
			</a>
		</div>

		<!-- badges -->
		<div
			class="mt-6 flex flex-wrap items-center justify-center gap-2 text-xs text-neutral-200/90">
			<span class="rounded-full border border-white/20 bg-white/10 px-3 py-1"
				>Mesadas e Islas a medida</span
			>
			<span class="rounded-full border border-white/20 bg-white/10 px-3 py-1"
				>Baños & Escaleras</span
			>
			<span class="rounded-full border border-white/20 bg-white/10 px-3 py-1"
				>Quinchos</span
			>
			<span class="rounded-full border border-white/20 bg-white/10 px-3 py-1"
				>Muebles en Melamina</span
			>
		</div>
	</div>
</section>
